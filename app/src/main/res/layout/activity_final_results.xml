<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalResultsActivity">


    <LinearLayout
        android:id="@+id/linearLayoutcalc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/finalscore_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Political Empathy Results"
            android:textColor="@color/white"
            android:background="@color/design_default_color_primary"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/economic_bias_score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:background="@color/lightgray"
            android:text="Economic Bias:  -2"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/social_bias_score2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="Social Bias:         -3"
            android:textColor="@color/black"
            android:background="@color/lightgray"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:id="@+id/summaryresults2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Here is a summary of your results"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/authoritariantext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutcalc2"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/politicalchart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="politicalcompass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutcalc2"
        app:layout_constraintVertical_bias="0.463"
        app:srcCompat="@drawable/politicalcompass"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/authoritariantext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Authoritarian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutcalc2"
        app:layout_constraintVertical_bias="0.177" />

    <TextView
        android:id="@+id/libertariantext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Libertarian"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutcalc2"
        app:layout_constraintVertical_bias="0.825" />

    <TextView
        android:id="@+id/leftwingtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutcalc2"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/rightwingtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutcalc2"
        app:layout_constraintVertical_bias="0.501" />


    <Button
        android:id="@+id/takeagain2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/darkgray"
        android:text="TAKE AGAIN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/libertariantext2"
        app:layout_constraintVertical_bias="0.294" />

    <Button
        android:id="@+id/shareresults2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/disagreepink"
        android:text="Share Results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toEndOf="@+id/takeagain2"
        app:layout_constraintTop_toBottomOf="@+id/libertariantext2"
        app:layout_constraintVertical_bias="0.294" />



</androidx.constraintlayout.widget.ConstraintLayout>